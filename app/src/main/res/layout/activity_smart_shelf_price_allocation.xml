<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">

    <TextView
        android:id="@+id/PriceAllocationTitleTextView"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_marginEnd="110dp"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="110dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="40dp"
        android:text="Price Allocation"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Price Allocation"
        tools:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/ItemEditText"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginEnd="116dp"
        android:layout_marginLeft="122dp"
        android:layout_marginRight="116dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PriceAllocationTitleTextView" />

    <Button
        android:id="@+id/sendNewItemPriceAllocationsToServerButton"
        android:layout_width="151dp"
        android:layout_height="0dp"
        android:layout_marginEnd="137dp"
        android:layout_marginLeft="137dp"
        android:layout_marginRight="137dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="132dp"
        android:text="Send Price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ItemEditText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="44dp"
        android:src="@mipmap/sap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>