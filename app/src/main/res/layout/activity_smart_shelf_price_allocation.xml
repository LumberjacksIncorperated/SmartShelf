<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="Price Allocations"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="Price Allocations"
        tools:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/ItemOneTextView"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginBottom="216dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:text="  Item One"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ItemTwoTextView"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_marginBottom="156dp"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:text="Item Two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ItemThreeTextView"
        android:layout_width="75dp"
        android:layout_height="24dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:text="Item Three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ItemOneEditText"
        android:layout_width="97dp"
        android:layout_height="46dp"
        android:layout_marginBottom="172dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:ems="10"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ItemTwoEditText"
        android:layout_width="89dp"
        android:layout_height="0dp"
        android:layout_marginBottom="112dp"
        android:layout_marginEnd="252dp"
        android:layout_marginRight="252dp"
        android:ems="10"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ItemThreeEditText"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:ems="10"
        android:inputType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sendNewItemPriceAllocationsToServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Prices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="128dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/sap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>